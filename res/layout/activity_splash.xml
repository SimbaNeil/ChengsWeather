<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.qq.e.union.demo.SplashActivity" >

    <!-- 广点通开屏广告支持“半屏/全屏”展示，开发者可以把Logo放在屏幕底部，然后在Logo上方提供一个容器来放置半开屏广告，请注意此容器高度不得小于400dp -->

    <!-- Logo区域，如果想展示全屏广告，可以不需要Logo区域 -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/gdtslogan"
        android:src="@drawable/gdt_splash_logo" />

    <!-- 开屏广告容器，不得小于400dp -->
    <FrameLayout
        android:id="@+id/splash_container"
        android:layout_above="@id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>